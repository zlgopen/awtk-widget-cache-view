<window theme="main" >
  <cache_view x="0" y="0" w="100%" h="100%" update_interval="300">
    <image x="0" y="0" w="100%" h="50%" image="logo" rotation="0"/>
    <image x="0" y="0" w="100%" h="50%" image="logo" rotation="1"/>
    <image x="0" y="0" w="100%" h="50%" image="logo" rotation="2"/>
    <image x="0" y="0" w="100%" h="50%" image="logo" rotation="3"/>
    <image x="0" y="0" w="100%" h="50%" image="logo" rotation="4"/>
    <image x="0" y="0" w="100%" h="50%" image="logo" rotation="5"/>
    <digit_clock  x="c" y="m:30" w="80" h="30" format="YY/MM/DD h:mm:ss"/>
  </cache_view>

  <guage x="c" y="10" w="240" h="240" image="guage_bg" >
    <guage_pointer x="c" y="50" w="24" h="140" value="-128" image="guage_pointer"
        animation="value(from=-128, to=128, yoyo_times=6, duration=3000, delay=1000, auto_destroy=false)"/>
  </guage>

   <guage x="c" y="bottom:60" w="240" h="240" image="guage_bg" >
    <guage_pointer x="c" y="50" w="12" h="140" value="-128" image="pointer"
        animation="value(from=-128, to=128, yoyo_times=1000, duration=3000)"/>
  </guage>
  
  <button x="c:-60" y="b:30" w="80" h="30" name="disable" text="Disable"/>
  <button x="c:60" y="b:30" w="80" h="30" name="close" text="Close"/>
</window>
